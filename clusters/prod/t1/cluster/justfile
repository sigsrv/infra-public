#!/usr/bin/env just -f

help:
    @just --list

status:
    @tofu output -json | jq -r .talos_cluster.value.status

apply:
    #!/usr/bin/env fish
    if test (just status) = "running"
        tofu apply
    else
        tofu apply -auto-approve -var status=ready
        tofu apply -auto-approve
    end

destory:
    tofu destroy
